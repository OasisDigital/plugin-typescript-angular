{
	"compilerOptions": {
		"outDir": "tmp/es6",
    	"lib": ["es5", "es2015.promise", "es2015.collection"],
		"target": "es5",
		"module": "es2015",
		"removeComments": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"inlineSourceMap": false,
		"rootDir": "./src",
		"allowSyntheticDefaultImports": true,
		"noImplicitReturns": true,
		"noImplicitThis": false,
		"noFallthroughCasesInSwitch": true
	},
	"files": [
		"./src/plugin.ts",
		"./src/types.d.ts"
	]
}
